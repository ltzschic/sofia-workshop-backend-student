<mvc:View
    controllerName="workshop.bridge.controller.Main"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:f="sap.f">

    <Page title="{i18n>appTitle}" showNavButton="false">
        <content>
            
            <!-- Workshop-Status Header -->
            <f:Card class="sapUiMediumMargin">
                <f:header>
                    <f:Header title="🚀 Workshop Sofia - UI5 ↔ Backend Bridge"/>
                </f:header>
                <f:content>
                    <layout:VerticalLayout class="sapUiSmallMargin">
                        <Text text="✅ Vorheriger Workshop: UI5 Frontend (Nested Views, Dialogs, Fragments)"/>
                        <Text text="🔄 HEUTE: Backend-Integration (BTP, OData, CAP)"/>
                        <Text text="🎯 Nächster Workshop: UI5 Aggregation Binding"/>
                        <Text text="📊 Aktueller Datenquelle: {backendStatus>/dataSource}" class="sapUiSmallMarginTop"/>
                    </layout:VerticalLayout>
                </f:content>
            </f:Card>

            <!-- Vorheriger Workshop - Referenz -->
            <Panel headerText="📚 Vorheriger Workshop: UI5 Frontend" 
                   class="sapUiMediumMargin" 
                   expanded="true">
                <content>
                    <layout:VerticalLayout class="sapUiSmallMargin">
                        <Text text="Diese UI-Komponenten haben wir bereits implementiert:"/>
                        
                        <layout:HorizontalLayout class="sapUiSmallMarginTop">
                            <Button 
                                text="🎭 Customer Dialog öffnen"
                                press="onOpenCustomerDialog"
                                type="Emphasized"
                                class="sapUiSmallMarginEnd"/>
                            <Button 
                                text="📦 Invoice List anzeigen"
                                press="onShowInvoiceList"
                                type="Default"
                                class="sapUiSmallMarginEnd"/>
                        </layout:HorizontalLayout>
                        
                        <Text text="⚠️ Aktuell: Mock-Daten | 🎯 Heute: Echte Backend-Daten" 
                              class="sapUiSmallMarginTop"/>
                    </layout:VerticalLayout>
                </content>
            </Panel>

            <!-- Backend-Integration Status -->
            <Panel headerText="🔄 HEUTE: Backend-Integration" 
                   class="sapUiMediumMargin"
                   expanded="true">
                <content>
                    <layout:VerticalLayout class="sapUiSmallMargin">
                        <Text text="Diese Backend-Services implementieren wir heute:"/>
                        
                        <layout:VerticalLayout class="sapUiSmallMarginTop">
                            <Text text="🌐 OData-Services: UI5 ↔ Backend Kommunikation"/>
                            <Text text="⚙️ CAP-Services: Custom Business Logic"/>
                            <Text text="🔗 Integration Suite: System-Verbindungen"/>
                            <Text text="🛡️ Authentication: XSUAA Security"/>
                        </layout:VerticalLayout>
                        
                        <layout:HorizontalLayout class="sapUiSmallMarginTop">
                            <Button 
                                text="🔍 Backend-Status prüfen"
                                press="onCheckBackendStatus"
                                type="Default"
                                class="sapUiSmallMarginEnd"/>
                            <Button 
                                text="📊 Mock vs Backend"
                                press="onCompareMockVsBackend" 
                                type="Transparent"
                                class="sapUiSmallMarginEnd"/>
                        </layout:HorizontalLayout>
                    </layout:VerticalLayout>
                </content>
            </Panel>

            <!-- Workshop-Übergang Demonstration -->
            <Panel headerText="🎯 Workshop-Kontinuum" 
                   class="sapUiMediumMargin">
                <content>
                    <layout:VerticalLayout class="sapUiSmallMargin">
                        <Text text="Nahtloser Übergang zwischen Workshop-Modulen:"/>
                        
                        <layout:HorizontalLayout class="sapUiSmallMarginTop">
                            <Button 
                                text="🚀 Workshop-Übergang zeigen"
                                press="onDemonstrateWorkshopTransition"
                                type="Emphasized"/>
                        </layout:HorizontalLayout>
                        
                        <Text text="💡 Dieselben UI5-Komponenten, aber mit echten Enterprise-Daten!" 
                              class="sapUiSmallMarginTop"/>
                    </layout:VerticalLayout>
                </content>
            </Panel>

            <!-- Mock-Daten Anzeige (temporär für Vergleich) -->
            <Panel headerText="📊 Mock-Daten (Referenz)" 
                   class="sapUiMediumMargin"
                   expanded="false">
                <content>
                    <List items="{mockData>/customers}" 
                          headerText="Kunden aus vorherigem Workshop:">
                        <StandardListItem 
                            title="{mockData>name}"
                            description="Status: {mockData>status} | Note: {mockData>note}"
                            info="{mockData>id}"
                            type="Inactive"/>
                    </List>
                </content>
            </Panel>

        </content>
    </Page>
</mvc:View>