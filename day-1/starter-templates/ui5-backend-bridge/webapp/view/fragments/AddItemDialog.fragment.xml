<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    
    <Dialog title="Neue Rechnung erstellen"
            contentWidth="400px"
            draggable="true"
            resizable="true">
        <content>
            <VBox class="sapUiMediumMargin">
                <Label text="Kunde:" class="sapUiTinyMarginBottom"/>
                <Input id="customerInput" 
                       placeholder="Firmenname eingeben"
                       class="sapUiMediumMarginBottom"/>
                
                <Label text="Betrag:" class="sapUiTinyMarginBottom"/>
                <Input id="amountInput" 
                       placeholder="0.00"
                       type="Number"
                       class="sapUiMediumMarginBottom"/>
                
                <Label text="Beschreibung:" class="sapUiTinyMarginBottom"/>
                <TextArea id="descriptionInput" 
                          placeholder="Leistungsbeschreibung"
                          rows="3"/>
            </VBox>
        </content>
        <buttons>
            <Button text="Speichern" 
                    type="Emphasized"
                    press="onSaveNewInvoice"/>
            <Button text="Abbrechen" 
                    press="onCancelDialog"/>
        </buttons>
    </Dialog>
</core:FragmentDefinition>
