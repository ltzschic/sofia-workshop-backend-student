{
    "name": "SAP CAP Development with UI5 Integration",
    "image": "sapbuildcode/btp-business-application-studio:latest",
    
    "features": {
        "ghcr.io/devcontainers/features/node:1": {
            "version": "18"
        },
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/devcontainers/features/common-utils:2": {}
    },
    
    "customizations": {
        "vscode": {
            "extensions": [
                "sapse.vscode-cds",
                "ms-vscode.vscode-json",
                "SAP.sap-ux-fiori-tools-extension-pack",
                "redhat.vscode-yaml",
                "ms-vscode.PowerShell",
                "GitLab.gitlab-workflow"
            ],
            "settings": {
                "cds.contributions.enabled": true,
                "workbench.colorTheme": "SAP Light",
                "editor.formatOnSave": true,
                "files.autoSave": "afterDelay"
            }
        }
    },
    
    "postCreateCommand": "npm install -g @sap/cds-dk && npm install",
    
    "forwardPorts": [4004, 3000, 8080],
    "portsAttributes": {
        "4004": {
            "label": "CAP Service",
            "onAutoForward": "notify"
        },
        "3000": {
            "label": "UI5 Dev Server",
            "onAutoForward": "notify"  
        }
    }
}
